server {
    listen      80;
    listen      [::]:80;
    server_name default_server;
    root        /var/www/front/public;

    # index.html fallback
    location / {
        try_files $uri $uri/ /index.html;
    }

    location /api/ {
        proxy_pass http://127.0.0.1:4000;
    }

    location /rest/ {
        proxy_pass http://127.0.0.1:8000;
    }
}
